{
  "manifest_version": 3,

  "name": "SourPatch",
  "version": "0.1.0",
  "description": "Eksi Sozluk'te ufak ama mide bulandiran seyleri duzeltir. Stresi yok eder.",

  "content_scripts": [
    {
      "css": ["styles.css"],
      "js": ["content.js"],
      "matches": ["https://*.eksisozluk.com/*", "http://*.eksisozluk.com/*"]
    }
  ],
  "options_ui": {
    "page": "options.html"
  },
  "permissions": ["storage"],
  "icons": {
    "128": "icon128.png"
  }
}
