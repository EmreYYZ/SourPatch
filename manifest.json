{
  "manifest_version": 3,
  "name": "SourPatch",
  "version": "1.2",
  "description": "Eksi Sozluk'te ufak ama mide bulandiran seyleri duzeltir. Stresi yok eder.",
  "homepage_url": "https://github.com/MostlyEmre/SourPatch",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "permissions": ["storage"],
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://eksisozluk.com/*"]
    }
  ]
}
